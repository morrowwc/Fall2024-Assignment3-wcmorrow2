@model Fall2024_Assignment3_wcmorrow2.Models.Actor

@{
    ViewData["Title"] = "Create";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="m-0 font-weight-bold text-primary">
            <h1 class="m-0 font-weight-bold text-primary">Create Actor</h1>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="">Please select</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DoB" class="control-label"></label>
                <input asp-for="DoB" class="form-control" type="date" />
                <span asp-validation-for="DoB" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DoD" class="control-label"></label>
                <input asp-for="DoD" class="form-control" type="date" />
                <span asp-validation-for="DoD" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IMDBlink" class="control-label"></label>
                <input asp-for="IMDBlink" type="url" class="form-control" />
                <span asp-validation-for="IMDBlink" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Media" class="control-label"></label>
                <input asp-for="Media" class="form-control" type="file" />
                <span asp-validation-for="Media" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
